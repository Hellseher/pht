#..:: Description ::..
# Recursively sort pictures in curren directory by created date
#
read -p "Sort images? (Yy|Nn): " answer
if [[ $answer = y  ||  $answer = Y ]]; then
    exiftool -r '-Directory<DateTimeOriginal' \
        -d %d_%B_%Y . && find ./ -type d -empty \
            -exec rm -rf {}\;
fi
