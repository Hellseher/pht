# extract - Ease way to extract archives

if [ -f $1 ]; then
    case $1 in
        *.tat.bz2   ) tar xvjf $1
            ;;
        *.tat.gz    ) tar xvzf $1
            ;;
        *.bz2       ) bunzip2 $1
            ;;
        *.rar       ) unrar x $1
            ;;
        *.gz        ) gunzip $1
            ;;
        *.tar       ) tar xvf $1
            ;;
        *.tbz2      ) tar xvjf $1
            ;;
        *.tgz       ) tar xvzf $1
            ;;
        *.zip       ) unzip $1
            ;;
        *.Z         ) uncompress $1
            ;;
        *.7z        ) 7z x  $1
            ;;
        *           ) echo "Cant extract '$1'..."
            ;;
    esac
else
    echo "'$1' is not a valid file..."
fi
