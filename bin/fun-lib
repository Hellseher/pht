. ~/.local/bin/var-lib


function err() {
    echo -e "[$(date +'%Y-%m-%dT%H:%M:%S%z')]: $@"
}

function if_sudo() {
    if [[ $EUID -ne 0 ]]; then
        err $0 ${Red}"must be run as root"${NC}
        exit 1
    fi
}

